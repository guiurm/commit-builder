{
  "tsc-alias": {
    "resolveFullPaths": true
  },
  "compilerOptions": {
    "composite": true,

    "target": "ESNext",

    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
